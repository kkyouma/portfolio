---
interface Props {
  title: string;
  description?: string;
  url: string;
  date?: Date;
  tags?: string[];
  imageUrl?: string; // Optional URL for remote images
  imagePath?: string; // Path for local images from public folder
  techs?: string[]; // Added to match your markdown frontmatter
  featured?: boolean; // Added to match your markdown frontmatter
}

const {
  title,
  description,
  url,
  date,
  tags,
  imageUrl,
  imagePath,
  techs,
  featured,
} = Astro.props;
import { formatDate } from "../../utils/date";

// Determine the image source - prefer imageUrl if provided, otherwise use imagePath
const imageSource =
  imageUrl || (imagePath ? imagePath : "/images/default-project.png");
---

<article class={featured ? "featured" : ""}>
  <div class="project-card">
    <div class="image-container">
      <img src={imageSource} alt={title} />
    </div>
    <div class="content">
      <div class="title-row">
        <a href={url}>{title}</a>
        {date && <time datetime={date.toISOString()}>{formatDate(date)}</time>}
      </div>
      <p class="muted-text">{description}</p>
      {
        (tags || techs) && (
          <div class="tags">
            {tags && tags.map((tag) => <span>{tag}</span>)}
            {techs && techs.map((tech) => <span>{tech}</span>)}
          </div>
        )
      }
    </div>
  </div>
</article>

<style>
  .project-card {
    padding-bottom: 40px;
    display: flex;
    gap: 1.5rem;
    align-items: flex-start;
  }

  .image-container {
    flex-shrink: 0;
    width: 238px;
    height: 186px;
    overflow: hidden;
    border-radius: 8px;
    border: 1px solid var(--border-color, rgba(255, 255, 255, 0.1));
  }

  .image-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .content {
    flex: 1;
  }

  .title-row {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: 1rem;
  }

  .title-row a {
    font-size: var(--text-lg);
    text-decoration: none;
    color: var(--text-color);
  }

  .title-row a:hover {
    color: var(--link-color);
  }

  .muted-text {
    opacity: 0.7;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    margin-top: 0.5rem;
  }

  .tags span {
    font-size: var(--text-xs);
    opacity: 0.5;
  }

  /* Optional: style for featured projects */
  .featured .project-card {
    background-color: var(--featured-bg, rgba(255, 255, 255, 0.05));
    padding: 1rem;
    border-radius: 8px;
  }
</style>
